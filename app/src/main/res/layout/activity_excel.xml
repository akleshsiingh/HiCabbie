<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.excel.ExcelActivity">


    <android.support.v7.widget.RecyclerView
            android:background="#33b2b2b2"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText"
            android:id="@+id/listMessage"/>
    <EditText
            android:maxLines="5"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="enter message here..."
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/textView"/>

    <TextView
            android:padding="3dp"
            android:includeFontPadding="false"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#707070"
            android:drawablePadding="0dp"
            android:text="2 new messages"
            android:drawableLeft="@drawable/ic_down_24dp"
            android:src="@drawable/ic_down_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/editText" android:id="@+id/tvUnReadStatus"/>
    <TextView
            android:textColor="@color/black"
            android:text="SEND"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/editText"/>

</android.support.constraint.ConstraintLayout>