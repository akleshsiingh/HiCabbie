<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:text="this is my big notification title"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/ivBtnStop"
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy "
                android:layout_height="wrap_content"/>

        <ImageButton
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:background="@drawable/bg_round"
                android:src="@drawable/ic_stop_24"
                android:id="@+id/ivBtnStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>